# NiFi API Configuration
NIFI_API_BASE_URL=http://localhost:8080/nifi-api
NIFI_API_USERNAME=
NIFI_API_PASSWORD=
# For certificate-based authentication (optional)
NIFI_API_CLIENT_CERT_PATH=
NIFI_API_CLIENT_KEY_PATH=
NIFI_API_CA_CERT_PATH=

# NiFi Flow Configuration
NIFI_ROOT_PROCESS_GROUP_ID=root
NIFI_CDC_PROCESS_GROUP_NAME=CDC-Flows
NIFI_API_TIMEOUT=30000

# Source Database Configuration (Oracle)
SOURCE_DB_TYPE=oracle
SOURCE_DB_HOST=localhost
SOURCE_DB_PORT=1521
SOURCE_DB_SERVICE_NAME=ORCL
SOURCE_DB_USERNAME=
SOURCE_DB_PASSWORD=
SOURCE_DB_SCHEMA=

# Target Database Configuration
TARGET_DB_TYPE=oracle
TARGET_DB_HOST=localhost
TARGET_DB_PORT=1521
TARGET_DB_SERVICE_NAME=ORCL
TARGET_DB_USERNAME=
TARGET_DB_PASSWORD=
TARGET_DB_SCHEMA=

# CDC Configuration
CDC_POLLING_INTERVAL=5000
CDC_BATCH_SIZE=1000
CDC_START_FROM=CURRENT
# Options: CURRENT, TIMESTAMP, SCN (for Oracle)
CDC_START_VALUE=

# Monitoring Configuration
MONITORING_ENABLED=true
MONITORING_INTERVAL=60000
ALERT_EMAIL=
ALERT_WEBHOOK_URL=

# Logging Configuration
LOG_LEVEL=INFO
LOG_FILE_PATH=./logs/nificdc.log
LOG_MAX_SIZE=100MB
LOG_MAX_FILES=10

# Performance Tuning
MAX_CONCURRENT_FLOWS=5
CONNECTION_POOL_SIZE=10
API_RETRY_COUNT=3
API_RETRY_DELAY=1000

# Environment
ENVIRONMENT=development
# Options: development, staging, production